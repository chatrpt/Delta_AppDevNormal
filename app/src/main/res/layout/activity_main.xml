<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/my_image_view"
        android:layout_width="293dp"
        android:layout_height="82dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/yellowcrown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="342dp"
        android:layout_height="328dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:fontFamily="@font/appetiteitalic"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="  WORD JUMBLE"
        android:textColor="#12c2e9"
        android:textSize="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="316dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/textbgwhite"
        android:ems="10"
        android:hint=" Word"
        android:inputType="text"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="318dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/textbgwhite"
        android:ems="10"
        android:hint=" Clue"
        android:inputType="text"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/editTextText2"
        android:layout_width="184dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/textbgyellow"
        android:ems="10"
        android:inputType="text"
        android:text="     Word"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationZ="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/editTextText4"
        android:layout_width="183dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="141dp"
        android:background="@drawable/textbgyellow"
        android:ems="10"
        android:inputType="text"
        android:text="     Clue"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:translationZ="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonstart"
        android:layout_width="288dp"
        android:layout_height="65dp"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button"
        android:backgroundTint="#3F51B5"
        android:soundEffectsEnabled="true"
        android:text="Start"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FFEB3B"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>